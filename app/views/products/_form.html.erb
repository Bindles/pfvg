<%= form_with(model: product, local: true) do |form| %>
  <!-- Form fields here -->

  <%= form.submit 'Save', class: 'btn btn-primary' %>

  <% if product.persisted? %>
    <%= link_to 'Fetch', fetch_product_path(product), class: 'btn btn-primary', remote: true %>
  <% end %>
<% end %>

